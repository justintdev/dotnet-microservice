{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Microservice (https + browser)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-microservice",
      "program": "${workspaceFolder}/Microservice/bin/Debug/net10.0/Microservice.dll",
      "cwd": "${workspaceFolder}/Microservice",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:7164"
      },
      "stopAtEntry": false,
      "console": "internalConsole",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+https://localhost:7164",
        "uriFormat": "https://localhost:7164/swagger"
      }
    },
    {
      "name": "Microservice (http + browser)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-microservice",
      "program": "${workspaceFolder}/Microservice/bin/Debug/net10.0/Microservice.dll",
      "cwd": "${workspaceFolder}/Microservice",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5164"
      },
      "stopAtEntry": false,
      "console": "internalConsole",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+http://localhost:5164",
        "uriFormat": "http://localhost:5164/swagger"
      }
    }
  ]
}
